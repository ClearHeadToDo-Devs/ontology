# Content Negotiation for Clearhead Actions Vocabulary
# Serves different formats based on Accept headers

# Enable content negotiation
Options +MultiViews
DirectoryIndex index

# Set up type maps for vocabulary files
AddType text/turtle .ttl
AddType application/rdf+xml .rdf
AddType application/schema+json .schema.json
AddType application/ld+json .jsonld

# Content negotiation for /actions/ endpoint
RewriteEngine On

# Handle /actions/ requests with content negotiation
RewriteCond %{REQUEST_URI} ^/actions/?$
RewriteCond %{HTTP_ACCEPT} text/turtle [NC]
RewriteRule ^(.*)$ /actions/vocabulary.ttl [L]

RewriteCond %{REQUEST_URI} ^/actions/?$ 
RewriteCond %{HTTP_ACCEPT} application/rdf\+xml [NC]
RewriteRule ^(.*)$ /actions/vocabulary.rdf [L]

RewriteCond %{REQUEST_URI} ^/actions/?$
RewriteCond %{HTTP_ACCEPT} application/.*json [NC]
RewriteRule ^(.*)$ /actions/schemas/actions-combined.schema.json [L]

RewriteCond %{REQUEST_URI} ^/actions/?$
RewriteCond %{HTTP_ACCEPT} application/ld\+json [NC]
RewriteRule ^(.*)$ /actions/vocabulary.jsonld [L]

# Default to HTML documentation for browsers
RewriteCond %{REQUEST_URI} ^/actions/?$
RewriteCond %{HTTP_ACCEPT} text/html [NC,OR]
RewriteCond %{HTTP_ACCEPT} \*/\* [NC,OR]
RewriteCond %{HTTP_ACCEPT} ^$ 
RewriteRule ^(.*)$ /actions/index.html [L]

# Redirect root to actions vocabulary
RewriteRule ^/?$ /actions/ [R=302,L]

# CORS headers for API access
Header always set Access-Control-Allow-Origin "*"
Header always set Access-Control-Allow-Methods "GET, OPTIONS"
Header always set Access-Control-Allow-Headers "Accept, Content-Type"

# Cache control for vocabulary files
<FilesMatch "\.(ttl|rdf|json|jsonld)$">
    ExpiresActive On
    ExpiresDefault "access plus 1 hour"
    Header set Cache-Control "public, max-age=3600"
</FilesMatch>

# No cache for HTML (documentation may update)
<FilesMatch "\.html$">
    Header set Cache-Control "no-cache, must-revalidate"
</FilesMatch>

# Security headers
Header always set X-Content-Type-Options nosniff
Header always set X-Frame-Options DENY
Header always set X-XSS-Protection "1; mode=block"

# Compress text files
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
    AddOutputFilterByType DEFLATE application/json
    AddOutputFilterByType DEFLATE application/ld+json
    AddOutputFilterByType DEFLATE text/turtle
</IfModule>

# Pretty URLs - remove .html extension
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^([^\.]+)$ $1.html [NC,L]