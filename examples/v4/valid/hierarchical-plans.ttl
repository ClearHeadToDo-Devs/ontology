@prefix actions: <https://clearhead.us/vocab/actions/v4#> .
@prefix cco: <https://www.commoncoreontologies.org/> .
@prefix bfo: <http://purl.obolibrary.org/obo/> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

# =============================================================================
# Hierarchical Plans Example
# =============================================================================
#
# Demonstrates:
# 1. Plan hierarchy using BFO partOf/hasPart relationships
# 2. Parent plan with child plans
# 3. Each plan has its own execution (PlannedAct)
#
# DSL equivalent:
# [ ] Plan vacation
# > [ ] Research destinations  
# > [x] Book flights
# > [ ] Reserve hotel
# =============================================================================

# Parent Plan
<urn:uuid:plan-vacation> a cco:ont00000974 ;
    rdfs:label "Plan vacation" ;
    rdfs:comment "Organize summer vacation trip" ;
    bfo:BFO_0000051 <urn:uuid:plan-research-destinations> ;  # hasPart
    bfo:BFO_0000051 <urn:uuid:plan-book-flights> ;           # hasPart
    bfo:BFO_0000051 <urn:uuid:plan-reserve-hotel> ;          # hasPart
    cco:ont00001942 <urn:uuid:act-vacation-001> .

<urn:uuid:act-vacation-001> a cco:ont00000228 ;
    actions:hasPhase actions:InProgress .

# Child Plan 1
<urn:uuid:plan-research-destinations> a cco:ont00000974 ;
    rdfs:label "Research destinations" ;
    bfo:BFO_0000050 <urn:uuid:plan-vacation> ;  # partOf
    cco:ont00001942 <urn:uuid:act-research-001> .

<urn:uuid:act-research-001> a cco:ont00000228 ;
    actions:hasPhase actions:NotStarted .

# Child Plan 2  
<urn:uuid:plan-book-flights> a cco:ont00000974 ;
    rdfs:label "Book flights" ;
    bfo:BFO_0000050 <urn:uuid:plan-vacation> ;  # partOf
    cco:ont00001942 <urn:uuid:act-book-flights-001> .

<urn:uuid:act-book-flights-001> a cco:ont00000228 ;
    actions:hasPhase actions:Completed ;
    actions:hasCompletedDateTime "2025-01-10T14:30:00Z"^^xsd:dateTime .

# Child Plan 3
<urn:uuid:plan-reserve-hotel> a cco:ont00000974 ;
    rdfs:label "Reserve hotel" ;
    bfo:BFO_0000050 <urn:uuid:plan-vacation> ;  # partOf
    cco:ont00001942 <urn:uuid:act-reserve-hotel-001> .

<urn:uuid:act-reserve-hotel-001> a cco:ont00000228 ;
    actions:hasPhase actions:NotStarted .