@prefix actions: <https://clearhead.us/vocab/actions/v4#> .
@prefix cco: <https://www.commoncoreontologies.org/> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .

# =============================================================================
# Context Hierarchy Example
# =============================================================================
#
# Demonstrates the entity-based context system with tag hierarchies:
# 1. Context entities with identifiers and types
# 2. Hierarchical relationships (broader/narrower)
# 3. Plans requiring contexts
# 4. Connection to tag inheritance system
#
# Context hierarchy:
# work
# +-- clearhead (work project)
# computer
# +-- terminal (computer tool)
#     +-- neovim (terminal editor)
# =============================================================================

# Context entities with hierarchy
<urn:context:work> a actions:Context ;
    rdfs:label "Work" ;
    actions:hasContextIdentifier "work" ;
    actions:hasContextType actions:CategoryContextType .

<urn:context:clearhead> a actions:Context ;
    rdfs:label "ClearHead Project" ;
    actions:hasContextIdentifier "clearhead" ;
    actions:hasContextType actions:CategoryContextType ;
    actions:contextBroader <urn:context:work> .

<urn:context:computer> a actions:Context ;
    rdfs:label "Computer" ;
    actions:hasContextIdentifier "computer" ;
    actions:hasContextType actions:ToolContextType .

<urn:context:terminal> a actions:Context ;
    rdfs:label "Terminal" ;
    actions:hasContextIdentifier "terminal" ;
    actions:hasContextType actions:ToolContextType ;
    actions:contextBroader <urn:context:computer> .

<urn:context:neovim> a actions:Context ;
    rdfs:label "Neovim Editor" ;
    actions:hasContextIdentifier "neovim" ;
    actions:hasContextType actions:ToolContextType ;
    actions:contextBroader <urn:context:terminal> .

# Facility context
<urn:context:office> a actions:Context ;
    rdfs:label "Office" ;
    actions:hasContextIdentifier "@office" ;
    actions:hasContextType actions:FacilityContextType .

# Plans using contexts
<urn:plan:code-review> a cco:ont00000974 ;
    rdfs:label "Code review for v4 migration" ;
    actions:hasPriority 2 ;
    actions:requiresContext <urn:context:neovim> , <urn:context:clearhead> ;
    cco:ont00001942 <urn:act:code-review> .

<urn:act:code-review> a cco:ont00000228 ;
    cco:ont00001868 actions:NotStarted .

<urn:plan:team-meeting> a cco:ont00000974 ;
    rdfs:label "Discuss ontology approach with team" ;
    actions:hasPriority 1 ;
    actions:requiresContext <urn:context:office> , <urn:context:clearhead> ;
    cco:ont00001942 <urn:act:team-meeting> .

<urn:act:team-meeting> a cco:ont00000228 ;
    cco:ont00001868 actions:NotStarted .
