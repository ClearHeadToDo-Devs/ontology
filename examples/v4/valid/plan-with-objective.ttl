@prefix actions: <https://clearhead.us/vocab/actions/v4#> .
@prefix cco: <https://www.commoncoreontologies.org/> .
@prefix bfo: <http://purl.obolibrary.org/obo/> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

# =============================================================================
# Plan with Objective Example
# =============================================================================
#
# Demonstrates:
# 1. Objective (CCO Objective) - project/story
# 2. Charter containing Plans (via part_of)
# 3. inServiceOf relationship linking Plan â†’ Objective
# 4. Multiple plans can serve the same objective
#
# DSL equivalent:
# *grocery-shopping
# [ ] Buy milk *grocery-shopping
# [ ] Buy bread *grocery-shopping
# =============================================================================

# The Objective (project/story)
<urn:objective:grocery-shopping> a cco:ont00000476 ;  # CCO Objective
    rdfs:label "grocery-shopping" ;
    rdfs:comment "Weekly grocery shopping trip" .

# First Plan contributing to the objective
<urn:uuid:plan-buy-milk> a cco:ont00000974 ;
    rdfs:label "Buy milk" ;
    actions:inServiceOf <urn:objective:grocery-shopping> ;
    cco:ont00001942 <urn:uuid:act-buy-milk-001> .

<urn:uuid:act-buy-milk-001> a cco:ont00000228 ;
    cco:ont00001868 actions:NotStarted .

# Second Plan contributing to the same objective
<urn:uuid:plan-buy-bread> a cco:ont00000974 ;
    rdfs:label "Buy bread" ;
    actions:inServiceOf <urn:objective:grocery-shopping> ;
    cco:ont00001942 <urn:uuid:act-buy-bread-001> .

<urn:uuid:act-buy-bread-001> a cco:ont00000228 ;
    cco:ont00001868 actions:InProgress .
