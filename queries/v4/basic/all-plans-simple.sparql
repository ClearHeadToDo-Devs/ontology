# =============================================================================
# Query: All Plans (Simplified)
# =============================================================================
# Purpose: List all Plans with basic metadata (simplified version)
# Returns: plan, name, priority_level, objective
# Usage: Basic inventory of all plans in the workspace
# =============================================================================

PREFIX actions: <https://clearhead.us/vocab/actions/v4#>
PREFIX cco: <https://www.commoncoreontologies.org/>
PREFIX rdfs: <http://www.w3.org/2000/01/rdf-schema#>

SELECT DISTINCT ?plan ?name ?priority_level ?objective WHERE {
    ?plan a cco:ont00000974 ;
          rdfs:label ?name .
    
    # Optional priority (simple integer)
    OPTIONAL { 
        ?plan actions:hasPriority ?priority_level .
    }
    
    # Optional objective (project/story)
    OPTIONAL {
        ?plan actions:hasObjective ?obj .
        ?obj rdfs:label ?objective .
    }
}
ORDER BY ?priority_level ?name