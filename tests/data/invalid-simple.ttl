@prefix actions: <https://vocab.example.org/actions/> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .

#################################################################
#    Simple Invalid Test - Root Action with Parent
#################################################################

# Invalid: Root action with parent (should not have parent)
actions:other_action a actions:RootAction ;
    actions:priority 1 ;
    actions:state actions:InProgress ;
    actions:context "@work" .

actions:invalid_root a actions:RootAction ;
    actions:priority 1 ;
    actions:state actions:InProgress ;
    actions:context "@computer" ;
    actions:parentAction actions:other_action .  # Invalid! Root cannot have parent
