@prefix actions: <https://vocab.example.org/actions/> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .

#################################################################
#    Invalid: Leaf Action with Wrong Parent Type
#################################################################

actions:root_parent a actions:RootAction ;
    actions:priority 1 ;
    actions:state actions:InProgress ;
    actions:context "@work" .

# Invalid: Leaf action with root parent (should have child parent)
actions:invalid_leaf a actions:LeafAction ;
    actions:priority 2 ;
    actions:state actions:NotStarted ;
    actions:context "@computer" ;
    actions:parentAction actions:root_parent .  # Invalid! Leaf must have ChildAction parent