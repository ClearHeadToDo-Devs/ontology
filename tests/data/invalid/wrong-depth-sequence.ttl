@prefix actions: <https://vocab.example.org/actions/> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .

#################################################################
#    Invalid: Wrong Depth Sequence (Gap in Depth)
#################################################################

actions:parent a actions:RootAction ;
    actions:depth 0 ;
    actions:priority 1 ;
    actions:state actions:InProgress ;
    actions:context "@work" ;
    actions:childAction actions:child .

actions:child a actions:ChildAction ;
    actions:depth 3 ;  # Should be 1! Gap of 2 levels
    actions:priority 2 ;
    actions:state actions:NotStarted ;
    actions:context "@computer" ;
    actions:parentAction actions:parent .