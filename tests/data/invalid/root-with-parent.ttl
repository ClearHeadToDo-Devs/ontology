@prefix actions: <https://vocab.example.org/actions/> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .

#################################################################
#    Invalid: Root Action with Parent
#################################################################

actions:invalid_root a actions:RootAction ;
    actions:depth 0 ;
    actions:priority 1 ;
    actions:state actions:InProgress ;
    actions:context "@office" ;
    actions:parentAction actions:some_parent .

actions:some_parent a actions:RootAction ;
    actions:depth 0 ;
    actions:priority 1 ;
    actions:state actions:NotStarted ;
    actions:context "@work" .